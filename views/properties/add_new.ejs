<% layout("/layouts/boilerplate2") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <br /><br />
        <h2>Create a new listing</h2>
        
        <form action="/propertyList" method="POST">
            
            <!-- --------------new added -->

            <div class="form-group">
                <label for="property-title"
                  ><i class="fas fa-home"></i> Property Title</label
                >
                <input
                  type="text"
                  id="property-title"
                  name="property[title]"
                  required
                />
              </div>
    
              <div class="form-group">
                <label for="price"><i class="fas fa-dollar-sign"></i> Price</label>
                <input type="number" id="price" name="property[price]" required />
              </div>
    
              <div class="form-group">
                <label for="description"
                  ><i class="fas fa-align-left"></i> Description</label
                >
                <textarea
                  id="description"
                  name="property[description]"
                  rows="4"
                  required
                ></textarea>
              </div>
    
              <div class="form-group">
                <label for="location"
                  ><i class="fas fa-map-marker-alt"></i> Location</label
                >
                <input type="text" id="location" name="location[location]" required />
              </div>
    
              <div class="form-group">
                <label for="bedrooms"><i class="fas fa-bed"></i> Bedrooms</label>
                <input type="number" id="bedrooms" name="property[bedrooms]" required />
              </div>
    
              <div class="form-group">
                <label for="bathrooms"><i class="fas fa-bath"></i> Bathrooms</label>
                <input type="number" id="bathrooms" name="property[bathrooms]" required />
              </div>
    
              <div class="form-group">
                <label for="square-feet"
                  ><i class="fas fa-ruler-combined"></i> Square Feet</label
                >
                <input type="number" id="square-feet" name="property[squarefeet]" required />
              </div>
    
              <div class="form-group">
                <label for="property-image"
                  ><i class="fas fa-image"></i> Property Image</label
                >
                <input
                  type="text"
                  id="property-image"
                  name="property[image]"
                  
                />
              </div>
    
              <div class="form-group">
                <label for="seller-name"
                  ><i class="fas fa-user"></i> Seller Name</label
                >
                <input type="text" id="seller-name" name="prpperty[sellername]" required />
              </div>
    
              <div class="form-group">
                <label for="seller-contact"
                  ><i class="fas fa-phone-alt"></i> Seller Contact</label
                >
                <input
                  type="text"
                  id="seller-contact"
                  name="property[sellercontact]"
                  required
                />
              </div>
    
              <button type="submit" class="submit-btn">
                <i class="fas fa-paper-plane"></i> Submit
              </button>
        </form>
    </div>
</div>
