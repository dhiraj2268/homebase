<% layout("/layouts/boilerplate2") %>
  <body>
    <form action="/properties/new" method="get">
      <!-- <button>create listing</button> -->
    </form>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
      <% for(let property of allListing){ %>
        <a href="/properties/<%= property._id %>" class="listing-link">
      <div class="card col listing-card">
          <img src="<%= property.image[0].url %>" class="card-img-top" alt="listing image" style="height: 20rem;">
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <p class="card-text">
              <b><%= property.title %></b> <br> 
              &#8377;<%= property.price.toLocaleString("en-IN") %>/night
              <i class="tax-info">&nbsp; &nbsp;+18% GST</i>
            </p>
          </div>
        </div>
      </a>
      <% } %>
    </div>
  </body>

